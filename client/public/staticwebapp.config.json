{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/.auth/*", "/api/*"]
  },
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout?post_logout_redirect_uri=/login",
      "statusCode": 302
    },
    {
      "route": "/",
      "allowedRoles": ["authenticated"],
      "serve": "/index.html",
      "statusCode": 401,
      "rewrite": "/login"
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"],
      "serve": "/index.html",
      "statusCode": 401,
      "rewrite": "/login"
    }
  ]
}
